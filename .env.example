# Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# Binance API Credentials
# Get these from https://www.binance.th/en/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_api_secret_here
BINANCE_REGION=th

# Database Configuration
DATABASE_URL=sqlite:///./g_ai_trade.db

# Security
# Generate a new key with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SECRET_KEY=generate-random-64-char-secret-key-here

# JWT Authentication (NEW)
# Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
# Token expiration is configured in app/security/auth.py
# ACCESS_TOKEN_EXPIRE_MINUTES=30
# REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Environment
# Options: development, production
ENVIRONMENT=development

# Production CORS Settings (comma-separated domains)
# Example: ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=

# Optional: Twitter/X API (for sentiment analysis)
X_API_KEY=your_twitter_api_key_optional
